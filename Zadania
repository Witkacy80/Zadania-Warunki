using System;

namespace Waarehouse
{
    internal class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Podaj liczbę od -100 do 100");

            double var1 = double.Parse(Console.ReadLine());
            
            if (var1 < 0)
            {
                Console.WriteLine($"{ var1} jest liczbą ujemną" );

            }
            else
            {
                Console.WriteLine($"{var1} jest liczbą dodatnią");
            }

        }
    }
}


//zadanie 4

using System;

namespace Waarehouse
{
    internal class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Podaj rok");

            int var1 = int.Parse(Console.ReadLine());

            if ((var1 % 4 == 0 && var1 % 100 !=0 ) || var1 % 400 == 0)
            {
                Console.WriteLine($"{var1} jest rokiem przestępnym");

            }
            else
            {
                Console.WriteLine($"{var1} nie jest rokiem przestępnym");
            }

        }
    }
}

