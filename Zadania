using System;

namespace Waarehouse
{
    internal class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Podaj swój wiek");

            int var1 = int.Parse(Console.ReadLine());
            
            if (var1 >= 21 )
            {
                Console.WriteLine("Możesz zostać posłem" );

            }
            else
            {
                Console.WriteLine("Nie możesz zostać posłem");
            }

        }
    }
}


//zadanie 6

using System;

namespace Waarehouse
{
    internal class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Podaj swój wzrost");

            double var1 = double.Parse(Console.ReadLine());

            if (var1 <=139)
            {
                Console.WriteLine("Jesteś dzieckiem");

            }

            else if (var1 >= 140 && var1 <= 150)
            {
                Console.WriteLine("Jesteś krasnoludem");

            }
            else if (var1 >= 151 && var1 <= 170)  
            {
                Console.WriteLine("Jesteś niziołkiem");
            }

            else if (var1 >= 171 && var1 <= 190)
            {
                Console.WriteLine("Jesteś człowiekiem");
            }

            else if (var1 >=191)
            {
                Console.WriteLine("Jesteś olbrzymem");
            }

        }
    }
}

// zadanie 7

using System;

namespace Waarehouse
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Podaj pierwszą liczbę");

            int var1 = int.Parse(Console.ReadLine());

            Console.WriteLine("Podaj drugą liczbę");

            int var2 = int.Parse(Console.ReadLine());

            Console.WriteLine("Podaj trzecią liczbę");

            int var3 = int.Parse(Console.ReadLine());

            if (var1 > var2 && var1 > var3)
            {
                Console.WriteLine($"{var1} jest największa z podanych");
            }
            else if (var2 > var1 && var2 > var3)
            {
                Console.WriteLine($"{var2} jest największa z podanych");
            }
            else
            {
                Console.WriteLine($"{var3} jest największa z podanych");
            }
        }
    }
}

//zadanie 8

using System;

namespace Waarehouse
{
    internal class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Podaj wynik z matury z matematyki");

            int math1 = int.Parse(Console.ReadLine());

            Console.WriteLine("Podaj wynik z matury z fizyki");

            int physics1 = int.Parse(Console.ReadLine());

            Console.WriteLine("Podaj wynik z matury z chemii");

            int chemistry1 = int.Parse(Console.ReadLine());

            int sumOfPoints = math1 + physics1 + chemistry1;

            if ((math1 > 70 && physics1 > 55 && chemistry1 > 45) || (math1 + physics1 + chemistry1) > 180)
            {
                Console.WriteLine("Kandydat dopuszczony do rekrutacji");
            }

            else if (math1 + physics1 >150 || math1 + chemistry1 >150)
            {
                Console.WriteLine("Kandydat dopuszczony do rekrutacji");
            }

            else
            {
                Console.WriteLine("Kandydat nie dopuszczony do rekrutacji");
            }

        }
    }
}

//zadanie 9 

using System;

namespace Waarehouse
{
    internal class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Podaj temperaturę");

            double temp1 = double.Parse(Console.ReadLine());

            if (temp1 < 0 )
            {
                Console.WriteLine("Cholernie piździ");
            }
            else if (temp1 >= 0 && temp1 < 10)
            {
                Console.WriteLine("Zimno");
            }
            else if (temp1 >= 10 && temp1 < 20)
            {
                Console.WriteLine("Chłodno");
            }
            else if (temp1 >= 20 && temp1 < 30)
            {
                Console.WriteLine("W sam raz");
            }
            else if (temp1 >= 30 && temp1 < 40)
            {
                Console.WriteLine("Zaczyna być słabo, bo gorąco");
            }
            else
            {
                Console.WriteLine("A weź wyprowadzam się na Alaskę");
            }
        }
    }
}

